{# FORMULAIRE D'ENREGISTREMENT D'UN COMPTE CAISSE #}


    <div class="row">
        <div class="col-12">
            <div class="row">
                <fieldset class="form-fieldset">
                    <legend>Identification compte caisse</legend>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="row">
                                <div class="col-md-12 col-xl-12">
                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required">
                                            Nom:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.nom) }}
                                        </div>
                                    </div>

                                    {#<div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required">
                                            Journal:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.code_journal, {'attr': {'readonly': true}}) }}
                                        </div>
                                    </div>#}

                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required" title="inscrire la forme de votre entreprise (Entreprise individuel, Sarl, SA, autres)">
                                            Numéro de compte:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.num_cpte) }}
                                        </div>
                                    </div>

                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required">
                                            Solde à l'ouverture:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.solde_ouv) }}
                                        </div>
                                    </div>

                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required" title="Prénom du gérant où de la gérante">
                                            Plafond:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.plafond) }}
                                        </div>
                                    </div>

                                    <div class="form-group row mb-3 mt-3">
									<label class="col-md-3 col-form-label required" title="Prénom du gérant où de la gérante">
										Solde Plancher:
									</label>
									<div class="col-md-7">
										{{ form_widget(form.solde_plancher) }}
									</div>
								</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>

                <fieldset class="form-fieldset">
                    <legend>Informations liées au gestionnaire</legend>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="row">
                                <div class="col-md-12 col-xl-12">
                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required">
                                            Caissier:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.caissier) }}
                                        </div>
                                    </div>

                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required">
                                            Contact:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.contact) }}
                                        </div>
                                    </div>

                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required">
                                            Responsable hiérarchique :
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.responsable) }}
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>

<div class="divide-x"></div>

<!-- Pied de page de notre formulaire -->
