{# FORMULAIRE D'ENREGISTREMENT D'UNE DEMANDE DE FONDS #}
    <div class="row">
        <div class="col-12">
            <div class="row">
                <fieldset class="form-fieldset">
                    <legend>Identification demande de fonds</legend>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="row">
                                <div class="col-md-12 col-xl-12">
                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required">
                                            Date:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.date, {'attr': {'readonly': true}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required">
                                            Caisse:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.caisse, {'attr': {'readonly': true}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required">
                                            Montant dépenses:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.montant_depenses) }}
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required">
                                            Solde après:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.solde_apres) }}
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required">
                                            Objet:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.objet) }}
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3 mt-3">
									<label class="col-md-3 col-form-label required">
										Montant:
									</label>
									<div class="col-md-7">
										{{ form_widget(form.montant) }}
									</div>
								</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <fieldset class="form-fieldset">
                    <legend>Informations liées au gestionnaire</legend>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="row">
                                <div class="col-md-12 col-xl-12">
                                    <div class="form-group row mb-3 mt-3">
                                        <label class="col-md-3 col-form-label required">
                                            Montant en lettres:
                                        </label>
                                        <div class="col-md-7">
                                            {{ form_widget(form.montant_lettres) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
<div class="divide-x"></div>

<!-- Pied de page de notre formulaire -->
<div class="card-footer mt-2">
    <button class="btn btn-warning float-end ms-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="24" height="24" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"></path>
            <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"></path>
        </svg>
        {{ button_label|default('Enregistrer')}}
    </button>
    <a href="{{ path('app_funds_request_index') }}" class="btn btn-azure  float-end">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-back" width="24" height="24" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M9 11l-4 4l4 4m-4 -4h11a4 4 0 0 0 0 -8h-1"></path>
        </svg>
        Retour
    </a>
</div>
